<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.payment.viewPaymentDetails"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:includeFontPadding="false"
        android:text="My Bill Details"
        android:textSize="33sp"
        android:textColor="@color/black"
        android:fontFamily="@font/bungee"/>

    <View
        android:layout_width="410dp"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@color/light_gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvShowAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="17dp"
            android:text="Account No: "
            android:textSize="25sp"
            android:textColor="@color/black"
            android:fontFamily="@font/opensans_bold"/>

        <TextView
            android:id="@+id/tvAccountNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tvShowAccount"
            android:fontFamily="@font/opensans_reg"
            android:textColor="@color/black"
            android:textSize="23sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvShowInvoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:text="Invoice No: "
            android:textSize="25sp"
            android:textColor="@color/black"
            android:fontFamily="@font/opensans_bold" />

        <TextView
            android:id="@+id/tvInvoiceID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tvShowInvoice"
            android:textColor="@color/black"
            android:textSize="23sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvBillWords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:fontFamily="@font/opensans_reg"
            android:text="Bill Cycle: "
            android:textColor="@color/dark_gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvBillWords"
            android:fontFamily="@font/opensans_reg"
            android:textColor="@color/dark_gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvStartEndDash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:textSize="15sp"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/opensans_reg"
            android:layout_toRightOf="@+id/tvStartDate"/>

        <TextView
            android:id="@+id/tvEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvStartEndDash"
            android:fontFamily="@font/opensans_reg"
            android:textColor="@color/dark_gray"
            android:textSize="15sp" />

        <View
            android:id="@+id/viewS2"
            android:layout_width="410dp"
            android:layout_height="2dp"
            android:layout_below="@+id/tvEndDate"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/light_gray" />

    </RelativeLayout>

    <!-- nett cost-->
    <RelativeLayout
        android:id="@+id/rlTVDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <!-- nett amount -->
        <TextView
            android:id="@+id/tvDetail1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:fontFamily="@font/opensans_reg"
            android:text="Current Charges"
            android:textColor="@color/dark_gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvDetail1.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvDetail1"
            android:fontFamily="@font/opensans_bold"
            android:text="$"
            android:textColor="@color/dark_gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvNettCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvDetail1.1"
            android:fontFamily="@font/opensans_bold"
            android:gravity="right"
            android:textColor="@color/dark_gray"
            android:textSize="15sp" />

    </RelativeLayout>

    <!-- conservation tax -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <!-- nett amount -->
        <TextView
            android:id="@+id/tvDetail2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:fontFamily="@font/opensans_reg"
            android:text="Water Conservation Tax (50%)"
            android:textColor="@color/dark_gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvDetail2.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textSize="15sp"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/opensans_bold"
            android:layout_toRightOf="@id/tvDetail2"/>

        <TextView
            android:id="@+id/tvConsTax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvDetail2.1"
            android:fontFamily="@font/opensans_bold"
            android:gravity="right"
            android:textColor="@color/dark_gray"
            android:textSize="15sp" />

    </RelativeLayout>

    <!-- waterborne fee-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvDetail3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:fontFamily="@font/opensans_reg"
            android:text="Waterborne Fee (75%)"
            android:textColor="@color/dark_gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvDetail3.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textSize="15sp"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/opensans_bold"
            android:layout_toRightOf="@id/tvDetail3"/>

        <TextView
            android:id="@+id/tvBorneFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvDetail3.1"
            android:fontFamily="@font/opensans_bold"
            android:gravity="right"
            android:textColor="@color/dark_gray"
            android:textSize="15sp" />

    </RelativeLayout>

    <!-- subtotal-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvDetail4"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:fontFamily="@font/opensans_reg"
            android:text="Subtotal"
            android:textColor="@color/dark_gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvDetail4.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvDetail4"
            android:fontFamily="@font/opensans_bold"
            android:text="$"
            android:textColor="@color/dark_gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvSubtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvDetail4.1"
            android:fontFamily="@font/opensans_bold"
            android:gravity="right"
            android:textColor="@color/dark_gray"
            android:textSize="15sp" />

    </RelativeLayout>

    <!-- gst  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


        <TextView
            android:id="@+id/tvDetail5"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:fontFamily="@font/opensans_reg"
            android:text="GST (7%)"
            android:textColor="@color/dark_gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvDetail5.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ "
            android:textSize="15sp"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/opensans_bold"
            android:layout_toRightOf="@id/tvDetail5" />

        <TextView
            android:id="@+id/tvGST"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvDetail5.1"
            android:fontFamily="@font/opensans_bold"
            android:gravity="right"
            android:textColor="@color/dark_gray"
            android:textSize="15sp" />


    </RelativeLayout>

    <!-- total amount -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvDetail6"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:fontFamily="@font/opensans_reg"
            android:text="Total Charges"
            android:textColor="@color/dark_gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvDetail6.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textSize="15sp"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/opensans_bold"
            android:layout_toRightOf="@id/tvDetail6"/>

        <TextView
            android:id="@+id/tvTotalAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvDetail6.1"
            android:fontFamily="@font/opensans_bold"
            android:textColor="@color/dark_gray"
            android:textSize="15sp" />

    </RelativeLayout>

    <View
        android:id="@+id/viewS3"
        android:layout_width="410dp"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@color/light_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp">

        <TextView
            android:id="@+id/tvShowDateIssued"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_reg"
            android:text="Date Issued: "
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvShowDateIssuedWords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvShowDateIssued"
            android:fontFamily="@font/opensans_reg"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp">

        <TextView
            android:id="@+id/tvShowDueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_reg"
            android:text="Payment Due On: "
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvShowDueDateWords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvShowDueDate"
            android:fontFamily="@font/opensans_reg"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>

    <View
        android:id="@+id/viewS4"
        android:layout_width="410dp"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@color/light_gray" />

    <!--    <Button-->
    <!--        android:id="@+id/payButton"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginTop="15dp"-->
    <!--        android:text="Click here to pay"-->
    <!--        android:backgroundTint="@color/navy_blue">-->

    <!--    </Button>-->

    <Button
        android:id="@+id/returnHomeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Return to Home Page"
        android:backgroundTint="@color/navy_blue">

    </Button>
</LinearLayout>
