<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.paymentSuccessful.paymentPage">


    <TextView
        android:id="@+id/tvCreditCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Credit card/Debit card:"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <EditText
        android:id="@+id/etCreditCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter card details"
        android:inputType="number"
        android:maxLength="16"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCreditCard">

    </EditText>

    <TextView
        android:id="@+id/tvExpire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Expiry date:"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etCreditCard">

    </TextView>

    <EditText
        android:id="@+id/etExpireDay"
        android:layout_width="45dp"
        android:layout_height="43dp"
        android:hint="dd"
        android:textSize="20dp"
        android:inputType="number"
        android:maxLength="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvExpire">

    </EditText>

    <TextView
        android:id="@+id/tvSlash"
        android:layout_width="17dp"
        android:layout_height="43dp"
        android:text="/"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/etExpireDay"
        app:layout_constraintTop_toBottomOf="@+id/tvExpire">

    </TextView>

    <EditText
        android:id="@+id/etExpireMonth"
        android:layout_width="45dp"
        android:layout_height="43dp"
        android:hint="mm"
        android:textSize="20dp"
        android:inputType="number"
        android:maxLength="2"
        app:layout_constraintStart_toEndOf="@+id/tvSlash"
        app:layout_constraintTop_toBottomOf="@id/tvExpire"
        tools:ignore="MissingConstraints">

    </EditText>

    <TextView
        android:id="@+id/tvCVC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="96dp"
        android:text="CVC:"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.847"
        app:layout_constraintStart_toEndOf="@+id/tvExpire"
        app:layout_constraintTop_toBottomOf="@+id/etCreditCard"
        tools:ignore="MissingConstraints">

    </TextView>

    <EditText
        android:id="@+id/etCVC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter CVC"
        android:textSize="20dp"
        android:inputType="number"
        android:maxLength="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.657"
        app:layout_constraintStart_toEndOf="@+id/etExpireMonth"
        app:layout_constraintTop_toBottomOf="@id/tvCVC">

    </EditText>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Name on card:"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCVC">

    </TextView>

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="Enter name on card"
        android:textSize="20dp"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvName">

    </EditText>

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click To Pay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etName">

    </Button>


    <Button
        android:id="@+id/btnCancelPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel Payment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConfirm">

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>