<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.userInfo.updateCustomerOptions">

    <TextView
        android:id="@+id/tvUpdateWords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Please choose the particular that \nyou wish to update"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>


    <Button
        android:id="@+id/btnUpdateCustomerContactNo"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="200dp"
        android:background="#FAF8F8"
        android:backgroundTint="#E6A08A"
        android:text="Update Contact Number"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:fontFamily="@font/robotoregular"
        app:backgroundTint="#B0B0B0"
        app:icon="@drawable/ic_baseline_supervised_user_circle_24"
        app:iconSize="50dp"
        android:gravity="left|center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUpdateWords"  >

    </Button>

    <Button
        android:id="@+id/btnUpdateCustomerEmail"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="#FAF8F8"
        android:backgroundTint="#E6A08A"
        android:text="Update Email"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:fontFamily="@font/robotoregular"
        app:backgroundTint="#B0B0B0"
        app:icon="@drawable/ic_baseline_supervised_user_circle_24"
        app:iconSize="50dp"
        android:gravity="left|center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUpdateCustomerContactNo"  >

    </Button>

    <Button
        android:id="@+id/btnUpdateCustomerPassword"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="#FAF8F8"
        android:backgroundTint="#E6A08A"
        android:text="Update Password"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:fontFamily="@font/robotoregular"
        app:backgroundTint="#B0B0B0"
        app:icon="@drawable/ic_baseline_supervised_user_circle_24"
        app:iconSize="50dp"
        android:gravity="left|center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUpdateCustomerEmail" >

    </Button>




</androidx.constraintlayout.widget.ConstraintLayout>